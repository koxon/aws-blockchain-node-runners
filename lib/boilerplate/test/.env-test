############################################################
# Example configuration for MyChain node runner app on AWS #
############################################################
# The commented out configurations are the defaults

# AWS configuration
AWS_ACCOUNT_ID="xxxxxxxxxxxx"                                # The AWS account ID where resources will be deployed
AWS_REGION="us-east-1"                                       # AWS region for deployment. Example: "us-east-1"

# # Instance configuration
MYCHAIN_INSTANCE_TYPE="m5.large"                             # The type of EC2 instance to use for the MYCHAIN node
MYCHAIN_CPU_TYPE="x86_64"                                    # CPU architecture: "x86_64", "ARM_64". IMPORTANT: Ensure compatibility with instance type
MYCHAIN_VERSION="latest"                                     # MYCHAIN node version to deploy. Use "latest" for the most recent version
MYCHAIN_NODE_CONFIGURATION="validator"                       # Node configuration type: "validator", "rpc", "archive"

# # Network configuration
MYCHAIN_NETWORK="localnet"                                   # Network onto which this node should connect

# # Storage configuration
MYCHAIN_DATA_VOL_SIZE=1024                                   # Volume size in GB for node data storage
MYCHAIN_DATA_VOL_TYPE="gp3"                                  # EBS volume type. Example: "gp2", "io1" for high-performance needs
MYCHAIN_DATA_VOL_IOPS=12000                                  # IOPS for "io1" volume type. IMPORTANT: Adjust based on performance needs
MYCHAIN_DATA_VOL_THROUGHPUT=700                              # Throughput in MB/s for "gp3" volume type. Check compatibility with chosen volume type

# # High Availability (HA) configuration
MYCHAIN_HA_ALB_HEALTHCHECK_GRACE_PERIOD_MIN=10               # Grace period in minutes for ALB health checks
MYCHAIN_HA_NODES_HEARTBEAT_DELAY_MIN=100                     # Heartbeat delay in minutes for HA node checks
MYCHAIN_HA_NUMBER_OF_NODES=2                                 # Number of nodes for High Availability setup
